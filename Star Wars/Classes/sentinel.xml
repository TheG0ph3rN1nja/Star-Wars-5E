  <element name="Force Discilpine(Spellcasting)" type="Class Feature" source="GM Binder SW5E" id="ID_GMBINDER_SW5E_CLASS_FEATURE_SENTINEL_SPELLCASTING_SENTINEL">
		<description>
			<p>Intelligence is your force ability for your force disciplines. You use your Intelligence modifier when setting the saving throw DC for a force discipline or when making an attack roll with one.</p>
			<center>
				<p><strong>Discipline save DC</strong> = 8 + your proficiency bonus + your Intelligence modifier</p>
				<p><strong>Discipline attack modifier</strong> = your proficiency bonus + your Intelligence modifier</p>
			</center>
		</description>
		<sheet>
			<description>Ability to use force disciplines(spells).</description>
		</sheet>
		<spellcasting name="Sentinel" ability="Intelligence" prepare="false" allowReplace="true">
			<list>Consular</list>
		</spellcasting>
		<rules>
			<grant type="Grants" id="ID_INTERNAL_GRANT_MULTICLASS_SPELLCASTING_SLOTS_FULL" requirements="ID_INTERNAL_GRANT_MULTICLASS" />
