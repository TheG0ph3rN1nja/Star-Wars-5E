	<element name="Jawa" type="Race" source="GM Binder SW5E" id="ID_GMBINDER_SW5E_RACE_JAWA">
		<description>
			<h4>Jawa Traits</h4>
			<p>Your Jawa character has many different attributes that might be useful in the field:</p>
			<p class="indent"><strong><i>Ability Score Increase.</i></strong> +2 Dex, +1 Int</p>
      <p class="indent"><strong><i>Age.</i></strong> Up to 80 years</p>
			<p class="indent"><strong><i>Alignment.</i></strong> Neutral.</p>
			<p class="indent"><strong><i>Size.</i></strong> Small.</p>
			<p class="indent"><strong><i>Speed.</i></strong> 25ft.</p>
			<p class="indent"><strong><i>Darkvision.</i></strong> 30ft.</p>
      <p class="indent"><strong><i>Expertise.</i></strong> Jawa have expertise in the Sleight of Hand and Intimidation skills.</p>
      <p class="indent"><strong><i>Tool Proficiency</i></strong> All.</p>
			<p class="indent"><strong><i>Languages.</i></strong> Basic, Jawaese. Jawas can only speak Jawaese.</p>
		</description>
		<sheet display="false" />
			<setters />
			<rules>
				<stat name="Dexterity" value="2" />
				<stat name="Intelligence" value="1" />
				<grant type="Size" id="ID_SIZE_SMALL" />
				<stat name="Speed" value="25" bonus="base" />
        <grant type="Vision" name="ID_VISION_DARKVISION" />
        <grant type="Racial Trait" id="ID_GMBINDER_SW5E_RACIAL_TRAIT_JAWA_EXPERTISE" />
        <grant type="Racial Trait" id="ID_GMBINDER_SW5E_RACIAL_TRAIT_JAWA_TOOL_PROFICIENCY" />
				<grant type="Language" id="ID_GMBINDER_SW5E_LANGUAGE_JAWAESE" />
				<grant type="Language" id="ID_GMBINDER_SW5E_LANGUAGE_BASIC" />
			</rules>
    </element>

    <element name="Expertise" type="Racial Trait" source="GM Binder SW5E" id="ID_GMBINDER_SW5E_RACIAL_TRAIT_JAWA_EXPERTISE">
